<div class="action-bar">
  <ul class="change-links">
    {{> /static/mustache/base_objects/unmap.mustache}}
    {{> /static/mustache/base_objects/edit_object_link.mustache}}
  </ul>
  <ul>
    {{> /static/mustache/base_objects/view_link.mustache }}
  </ul>
</div>

<div class="small-info">

  {{{renderLive '/static/mustache/base_objects/general_info.mustache' instance=instance }}}

  <div class="row-fluid">
    <div class="span6">
      <h6>Frequency</h6>
      <p>
        <span class="upp">{{{instance.frequency}}}</span>
      </p>
    </div>
    <div class="span6">
      <h6>Owner</h6>
      <p>
        {{#with_mapping 'authorizations' instance}}
          {{#each authorizations}}
            <span>
              {{#using role=instance.role}}
                {{#if_equals role.name 'WorkflowOwner'}}
                  {{#using contact=instance.person}}
                    {{{renderLive '/static/mustache/people/popover.mustache' person=contact}}}
                  {{/using}}
                {{/if_equals}}
              {{/using}}
            </span>
          {{/each}}
        {{/with_mapping}}
      </p>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <ggrc-gdrive-folder-picker instance="instance"/>
      
    </div>
  </div>
</div>
