{{!div class="modal-body"}}
<div class="hideable-holder"> 
{{#instance}}
<form action="javascript://">
  {{> /static/mustache/base_objects/form_restore.mustache}}

  <div class="row-fluid">
    <div class="span6 {{#instance.computed_errors.title}}field-failure{{/instance.computed_errors.title}}">
      <label>
        Title
        <span class="required">*</span>
        <i class="grcicon-help-black" rel="tooltip" title="Give new {{model.model_plural}} a name that's easy to search for and indicates the main goals of this {{model.model_singular}}."></i>
      </label>
      <input tabindex="1" class="input-block-level" placeholder="Enter Title" name="title" type="text" value="{{title}}" autofocus>
      {{#instance.computed_errors.title}}<label class="help-inline warning">{{this}}</label>{{/instance.computed_errors.title}}
    </div>
  </div>

  <div class="row-fluid">
    <div class="span6 hidable">
      <label>
        Description
        <i class="grcicon-help-black" rel="tooltip" title="Provide more details on the purpose of this {{model.model_singular}} and provide context for how and when this {{model.model_singular}} might be used."></i>
        <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
      </label>
      <div class="wysiwyg-area">
        <textarea tabindex="2" id="control_description" class="span12 double wysihtml5" name="description" placeholder="Enter Description">{{{description}}}</textarea>
      </div>
    </div>
    
    <div class="span6 hide-wrap hidable">      
      <div class="row-fluid inner-hide">
        <div class="span12 hidable">
          {{#using owner=instance.owners.0 model_singular=model.model_singular}}
          <label>
            Owner
            <i class="grcicon-help-black" rel="tooltip" title="This is the person in charge of this {{model_singular}}."></i>
            <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
          </label>
          <input tabindex="3" class="input-block-level" name="owners.0.email" data-lookup="Person" data-params="Person:is_enabled=1" data-list="true" placeholder="Enter email address" type="text" value="{{firstexist owner.email ''}}" />
          {{/using}}
        </div>
      </div>
      <div class="row-fluid inner-hide">
        <div class="span12 hidable">
          {{#using contact=instance.contact model_singular=model.model_singular}}
          <label>
            Contact
            <i class="grcicon-help-black" rel="tooltip" title="Point of contact for this object"></i>
            <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
          </label>
          <input tabindex="4" class="input-block-level" name="contact.email" data-lookup="Person" data-params="Person:is_enabled=1" placeholder="Enter email address" type="text" value="{{firstexist contact.email ''}}" />
          {{/using}}
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span6 hidable">
      <label>
        Notes
        <i class="grcicon-help-black" rel="tooltip" title="Append simple text or html notes here."></i>
        <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
      </label>
      <div class="wysiwyg-area">
        <textarea tabindex="5" id="notes" class="span12 double wysihtml5" name="notes" placeholder="Enter Notes">{{{notes}}}</textarea>
      </div>
    </div>
    <div class="span6 hide-wrap hidable">
      <div class="row-fluid inner-hide">
        <div class="span12 hidable">
          <label>
            Control URL
            <i class="grcicon-help-black" rel="tooltip" title="Web link to the Sites page / {{model.model_singular}} documentation."></i>
            <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
          </label>
          <input tabindex="6" class="input-block-level" name="url" placeholder="http://www.domain.com/" type="text" value="{{url}}">
        </div>
      </div>
      <div class="row-fluid inner-hide">
        <div class="span12 hidable">
          <label>
            Reference URL
            <i class="grcicon-help-black" rel="tooltip" title="Web links to other references."></i>
            <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
          </label>
          <input tabindex="7" id="reference_url" class="input-block-level" placeholder="https://www.example.com/" name="reference_url" type="text" value="{{reference_url}}">
        </div>
      </div>
    </div>
  </div>
  
  <div>
    <div class="row-fluid">
      <div class="span6 hidable">
        <label>
          Code
          <i class="grcicon-help-black" rel="tooltip" title="The gGRC application will automatically provide codes for new objects.  If you would like to override this feature you may manually enter a code of your choosing.  You should have a specific reason for doing this."></i>
          <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
        </label>
        <input tabindex="8" class="input-block-level" name="slug" placeholder="CONTROL-XXX" type="text" value="{{slug}}">
      </div>
    </div>
    <div class="row-fluid">
      <div class="span3 hidable">
        <label>
          Kind/Nature
          <i class="grcicon-help-black" rel="tooltip" title="Choose from the options in the drop down list, or leave this set to None."></i>
          <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
        </label> 
        <div tabindex="9">       
          {{{option_select this "kind" "control_kind"}}} 
        </div>       
      </div>
      <div class="span3 hidable">
        <label>
          Fraud Related
          <i class="grcicon-help-black" rel="tooltip" title="Is control fraud related?"></i>
          <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
        </label>
        <select class="input-block-level" name="fraud_related" null-if-empty="null-if-empty" tabindex="10">
          <option value="" {{#if_equals fraud_related ""}}selected{{/if_equals}}>---</option>
          <option value="0" {{#if_equals fraud_related "0"}}selected{{/if_equals}}>No</option>
          <option value="1" {{#if_equals fraud_related "1"}}selected{{/if_equals}}>Yes</option>
        </select>
      </div>
      <div class="span3 hidable">
        <label>
          Significance
          <i class="grcicon-help-black" rel="tooltip" title="Is this Control a Key Control?"></i>
          <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
        </label>
        <select class="input-block-level" name="key_control" null-if-empty="null-if-empty" tabindex="11">
          <option value="" {{#if_equals key_control ""}}selected{{/if_equals}}>---</option>
          <option value="0" {{#if_equals key_control "0"}}selected{{/if_equals}}>Non-Key</option>
          <option value="1" {{#if_equals key_control "1"}}selected{{/if_equals}}>Key</option>
        </select>
      </div>
      <div class="span3 hidable">
        <label>
          Type/Means
          <i class="grcicon-help-black" rel="tooltip" title="Choose from the options in the drop down list, or leave this set to None."></i>
          <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
        </label>
        <div tabindex="12">
          {{{option_select this "means" "control_means"}}}
        </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span6 hidable">
        <label>
          Effective Date
          <i class="grcicon-help-black" rel="tooltip" title="Enter the date this object becomes effective."></i>
          <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
        </label>
        <input tabindex="13" class="input-block-level date" name="start_date" data-toggle="datepicker" data-before="end_date" placeholder="MM/DD/YYYY" type="text" value="{{localize_date start_date}}">
      </div>
      <div class="span6 hidable">
        <label>
          Stop Date
          <i class="grcicon-help-black" rel="tooltip" title="Enter the date the object stops being effective."></i>
          <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
        </label>
        <input tabindex="14" class="input-block-level date" name="end_date" data-toggle="datepicker" data-after="start_date" placeholder="MM/DD/YYYY" type="text" value="{{localize_date end_date}}">
      </div>
    </div>

    <div class="row-fluid">
      <div class="span4 hidable">
        <label>
          Frequency
          <i class="grcicon-help-black" rel="tooltip" title="How often should this Control be re-evaluated?"></i>
          <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
        </label>
        <div tabindex=15>
          {{{option_select this "verify_frequency" "verify_frequency"}}}
        </div>
      </div>
      <div class="span4 hidable">
        <label>
          Assertions
          <i class="grcicon-help-black" rel="tooltip" title="Select control assertions."></i>
          <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
        </label>
          <div tabindex=16>
            {{{category_select this "assertions" "ControlAssertion"}}}
          </div>
      </div>
      <div class="span4 hidable">
        <label>
          Categories
          <i class="grcicon-help-black" rel="tooltip" title="Select control categories."></i>
          <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
        </label>
          <div tabindex=17>
            {{{category_select this "categories" "ControlCategory"}}}
          </div>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span4 hidable">
        <label>
          Principal Assessor
          <i class="grcicon-help-black" rel="tooltip" title="Select primary person who is responsible for assessing this control."></i>
          <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
        </label>
        <i class="grcicon-person-green pull-left icon-field"></i>
        <div class="objective-selector">
          {{#using assessor=instance.principal_assessor}}
          <input tabindex="18" type="text" name="principal_assessor.email" data-lookup="Person" data-params="Person:is_enabled=1" class="span11 audit-selector search-icon" placeholder="Enter text to search for Principal Assessor" value="{{firstnonempty assessor.email ''}}">
          {{/using}}
        </div>
      </div>
      <div class="span4 hidable">
        <label>
          Secondary Assessor
          <i class="grcicon-help-black" rel="tooltip" title="Select secondary person who is responsible for assessing this control."></i>
          <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
        </label>
        <i class="grcicon-person-green pull-left icon-field"></i>
        <div class="objective-selector">
          {{#using assessor=instance.secondary_assessor}}
          <input tabindex="19" type="text" name="secondary_assessor.email" data-lookup="Person" data-params="Person:is_enabled=1" class="span11 audit-selector search-icon" placeholder="Enter text to search for Secondary Assessor" value="{{firstnonempty assessor.email ''}}">
          {{/using}}
        </div>
      </div>
      <div class="span4 hidable">
        <label>
          State
          <i class="grcicon-help-black" rel="tooltip" title="Indicates the status of this object."></i>
          <a href="javascript://" class="field-hide" tabindex="-1">hide</a>
        </label>
        <select class="input-block-level" name="status" null-if-empty="null-if-empty" tabindex="20">
          <option value="" {{#if_equals status ""}}selected{{/if_equals}}>---</option>
          {{#iterate 'Draft', 'Final', 'Effective', 'Ineffective', 'Launched', 'Not Launched', 'In Scope', 'Not in Scope', 'Deprecated'}}
            <option {{#if_equals iterator status}}selected="true"{{/if_equals}}>{{iterator}}</option>
          {{/iterate}}
        </select>
      </div>
    </div>
  </div>
</form>
{{/instance}}
</div> 
{{!/div}}
